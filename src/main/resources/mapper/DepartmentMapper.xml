<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot_demo.mapper.DepartmentMapper">
    <insert id="addDepartment">
        insert into dept(name, create_time, update_time)
        values(#{name},#{createTime},#{updateTime})
    </insert>

    <delete id="deleteDepartmentById">
        delete from dept
        where id = #{id}
    </delete>

    <select id="getDepartments" resultType="com.example.springboot_demo.pojo.Department">
        select *
        from dept
        order by update_time desc
    </select>
</mapper>